ifeq "$(precision)" "single"
LIBS += -lfftw3f -lfftw3f_omp
else
LIBS += -lfftw3 -lfftw3_omp
fi

ME_S := $(shell uname -s)
ifeq ($(UNAME_S),Darwin)
ifeq "0" "1"

VTKV=-8.1
VTKD=/usr/local/Cellar/vtk/8.1.1/

LIBS+= -L$(VTKD)lib/ -lvtkCommonCore$(VTKV) -lvtkCommonDataModel$(VTKV) -lvtkIOXML$(VTKV)

else
LIBS+= -lhdf5
endif
endif

ifneq "$(findstring falcon,$(shell hostname))" ""

CPPFLAGS += -I${HDF5_INCLUDE}
LIBS += -L${HDF5_LIB} -lhdf5

endif

ifneq "$(findstring eu-, $(shell hostname))" ""
#LIBS+= -lhdf5
ifeq "$(compiler)" "intel"
CPPFLAGS+= -I/cluster/home/novatig/fftw-3.3.5/build_intel/include/
