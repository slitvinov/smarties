LIBS += -L$(VTK_LIB_DIR) -lz \
        -lvtkCommonCore \
        -lvtkCommonSystem \
        -lvtkCommonMath \
        -lvtkCommonDataModel \
        -lvtkCommonComputationalGeometry \
        -lvtkIOCore \
        -lvtkIOAMR \
        -lvtkIOXML \
        -lvtkIOXMLParser \
