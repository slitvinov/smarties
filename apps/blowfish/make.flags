ME_S := $(shell uname -s)
ifeq ($(UNAME_S),Darwin)
VTKVER=-8.1
VTKDIR=/usr/local/Cellar/vtk/8.1.1/
export LD_LIBRARY_PATH:=$(VTK_LIB_DIR):$(LD_LIBRARY_PATH)
LIBS += -L$(VTKDIR)lib/ -lz \
        -lvtkCommonCore$(VTKVER) \
        -lvtkCommonSystem$(VTKVER) \
        -lvtkCommonMath$(VTKVER) \
        -lvtkCommonDataModel$(VTKVER) \
        -lvtkCommonComputationalGeometry$(VTKVER) \
        -lvtkIOCore$(VTKVER) \
        -lvtkIOAMR$(VTKVER) \
        -lvtkIOXML$(VTKVER) \
        -lvtkIOXMLParser$(VTKVER) \
        -lvtkIOLegacy$(VTKVER) \
        -lvtkIOImport$(VTKVER) \
        -lvtkIOExport$(VTKVER)
endif

ifneq "$(findstring falcon,$(shell hostname))" ""
VTK_INC_DIR=/usr/include/vtk/
